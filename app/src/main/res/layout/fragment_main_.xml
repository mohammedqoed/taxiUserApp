<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bedetaxi.bedetaxi.Main_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Biddi Taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/buttonshap"
            android:id="@+id/bidditaxi"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:id="@+id/mainlinear"
            android:visibility="invisible"
            android:background="#FFFF"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignBottom="@+id/bidditaxi"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="113dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/drawerlogo"
                android:id="@+id/imageView2"
                android:layout_weight="1"



                />

            <RelativeLayout
                android:id="@+id/linearshow"
                android:layout_width="141dp"
                android:layout_height="match_parent"


                >

                <TextView
                    android:text="Scoda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView2"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Mohammad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/textView12"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_above="@+id/textView2" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/ratingBar"
                    android:maxHeight="50dip"
                    android:minHeight="52dp"
                    android:contextClickable="false"
                    android:clickable="false"
                    android:scrollbars="horizontal"
                    android:layout_gravity="bottom"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/linearbutton"
                >

                <Button
                    android:text="Call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fed902"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/call" />

                <Button
                    android:background="#3d3e3d"

                    android:text="@android:string/cancel"
                    android:layout_width="match_parent"
                    android:textColor="#FFFF"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/cancel" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
